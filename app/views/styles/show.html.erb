<p id="notice"><%= notice %></p>

<h2> <%= @style.name %> </h2>

<p>
  <%= @style.description %>
</p>

<h3>beers</h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Brewery</th>
  </tr>
  </thead>

  <tbody>
  <% @style.beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= edit_and_destroy_buttons(@style) %>
